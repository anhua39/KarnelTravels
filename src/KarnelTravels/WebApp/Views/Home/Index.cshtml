                            <select class="form-select">
                                <option selected disabled>Select room</option>
                                @for (int i = 1; i <= 8; i++)
                                {

                                    <option value="i">
                                        Room for @i adult
                                    </option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="text-center">
                    <button type="button" class="btn btn-primary" data-mdb-ripple-init>
                        Search
                        <i class="fa-solid fa-right-long fa-fw"></i>
                    </button>
                </div>
            </div>
            <div class="tab-pane fade" id="menu-tabs-3" role="tabpanel" aria-labelledby="menu-tab-3">
                <div class="row">
                    <div class="col-sm-4 col-md-4">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Resort Name:</label>
                            <input type="text"
                                   class="form-control"
                                   placeholder="Enter a destination or Resort name">
                        </div>
                    </div>
                    <div class="col-sm-4 col-md">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Check-In:</label>
                            <input type="date" class="form-control">
