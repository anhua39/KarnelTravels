<section id="wrapper">
    <div class="card mt-3 mb-4 p-5">
        <ul class="nav nav-tabs nav-justified mb-3" id="menu" role="tablist">
            <li class="nav-item" role="presentation">
                <a data-mdb-tab-init class="nav-link fw-bold active" id="menu-tab-1" href="#menu-tabs-1" role="tab"
                   aria-controls="menu-tabs-1" aria-selected="true"><i class="fas fa-bed fa-fw me-2"></i>Hotels</a>
            </li>
            <li class="nav-item" role="presentation">
                <a data-mdb-tab-init class="nav-link fw-bold" id="menu-tab-2" href="#menu-tabs-2" role="tab"
                   aria-controls="menu-tabs-2" aria-selected="false"><i class="fas fa-utensils fa-fw me-2"></i>Restaurants</a>
            </li>
            <li class="nav-item" role="presentation">
                <a data-mdb-tab-init class="nav-link fw-bold" id="menu-tab-3" href="#menu-tabs-3" role="tab"
