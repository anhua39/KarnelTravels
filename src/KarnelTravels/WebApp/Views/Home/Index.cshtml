                        <div class="mb-3">
                            <label class="form-label fw-bold">Adult:</label>
                            <select class="form-select">
                                <option selected disabled>Select room</option>
                                @for (int i = 1; i <= 8; i++)
                                {

                                    <option value="i">
                                        Room for @i adult
                                    </option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="text-center">
                    <button type="button" class="btn btn-primary" data-mdb-ripple-init>
                        Search
